{%- assign files = step.vars.dir | append: '/partials' | listFiles %}
mkdir -p /root/files
{%- for file in files %}
{%- assign filePath = step.vars.dir | append: '/partials/' | append: file %}
# Rendered from {{ filePath }}
cat <<EOF >/root/files/{{ file | remove: ".liquid" }}
{{ filePath | render: step: step }}
EOF
{%- endfor %}